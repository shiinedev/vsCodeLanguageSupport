// Test: For Loops
// This test checks if for loops work properly

bandhig("Testing for loops (ku_celi):")

// Simple for loop
bandhig("  Simple for loop:")
ku_celi i min 1 ilaa 5 {
    bandhig("    Iteration: " + i)
}

// For loop with step
bandhig("  For loop with custom step (every other number):")
ku_celi j min 2 ilaa 10 by 2 {
    bandhig("    Iteration: " + j)
}

// For loop with break
bandhig("  For loop with break (jooji):")
ku_celi i min 1 ilaa 10 {
    haddii (i > 5) {
        jooji
    }
    bandhig("    Iteration: " + i)
}

// For loop with continue
bandhig("  For loop with continue (sii_wad):")
ku_celi i min 1 ilaa 5 {
    haddii (i % 2 == 0) {
        sii_wad
    }
    bandhig("    Odd number: " + i)
}

// Nested for loops
bandhig("  Nested for loops:")
ku_celi i min 1 ilaa 3 {
    bandhig("    Outer loop: " + i)
    ku_celi j min 1 ilaa 2 {
        bandhig("      Inner loop: " + j)
    }
}

// For loop operating on a list
liis numbers = [10, 20, 30, 40, 50]
bandhig("  For loop iterating over a list with indices:")
ku_celi i min 0 ilaa numbers.length() - 1 {
    bandhig("    Element at index " + i + ": " + numbers[i])
}
